@inherits LayoutComponentBase
<FluentLayout>
    <FluentHeader Style="font-family:Bahnschrift;">
        Driver-Centric Theoretical Training - AdminApp
        <AuthorizeView>
            <Authorized>
                <FluentSpacer />
                <Notify @rendermode="InteractiveServer" />
            </Authorized>
        </AuthorizeView>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <AuthorizeView>
            <NotAuthorized>
                <NavMenu />
            </NotAuthorized>
        </AuthorizeView>
        <FluentBodyContent Style="font-family:Bahnschrift;">
            <div class="content">
                <FluentMessageBarProvider Section="MESSAGES_TOP" @rendermode="InteractiveServer"/>
                @Body
            </div>
            <FluentDialogProvider  @rendermode="InteractiveServer"/>
            <FluentToastProvider MaxToastCount="10" @rendermode="InteractiveServer" ShowCloseButton="true" RemoveToastsOnNavigation="true"/>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter Style="font-family:Bahnschrift;">
        <div class="link1">
            <a href="https://www.fluentui-blazor.net" target="_blank">Documentation and demos</a>
        </div>
        <div class="link2">
            <a href="https://learn.microsoft.com/en-us/aspnet/core/blazor" target="_blank">About Blazor</a>
        </div>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
